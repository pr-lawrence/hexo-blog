{
  // tasks.json 형식에 대한 설명서는 
  // https://go.microsoft.com/fwlink/?LinkId=733558의 내용을 참조하세요.
  "version": "2.0.0",
  "tasks": [{
      "label": "hexo serve",
      "type": "shell",
      "command": "hexo",
      "args": [
        "serve"
      ],
      "group": "build"
    },
    {
      "label": "hexo deploy",
      "type": "shell",
      "command": "hexo",
      "args": [
        "deploy",
        "--generate"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}